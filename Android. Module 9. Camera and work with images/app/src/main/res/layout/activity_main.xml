<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.example.camera.DrawableImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/takePhotoButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/shape_oval"
        android:contentDescription="@string/take_photo"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_photo_library"
        app:layout_constraintBottom_toBottomOf="@+id/addFilterButton"
        app:layout_constraintEnd_toStartOf="@+id/addFilterButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/addFilterButton"
        app:tint="@android:color/white" />

    <ImageButton
        android:id="@+id/drawLineButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/shape_oval"
        android:contentDescription="@string/add_filter"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_pencil"
        app:layout_constraintBottom_toBottomOf="@+id/floatingActionButton"
        app:layout_constraintEnd_toStartOf="@+id/floatingActionButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/addEmojiButton"
        app:layout_constraintTop_toTopOf="@+id/floatingActionButton"
        app:tint="@android:color/white" />

    <ImageButton
        android:id="@+id/addEmojiButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/shape_oval"
        android:contentDescription="@string/add_filter"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_emoji"
        app:layout_constraintBottom_toBottomOf="@+id/drawLineButton"
        app:layout_constraintEnd_toStartOf="@+id/drawLineButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/addFilterButton"
        app:layout_constraintTop_toTopOf="@+id/drawLineButton"
        app:tint="@android:color/white" />

    <ImageButton
        android:id="@+id/addFilterButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/shape_oval"
        android:contentDescription="@string/add_filter"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_photo_filter"
        app:layout_constraintBottom_toBottomOf="@+id/addEmojiButton"
        app:layout_constraintEnd_toStartOf="@+id/addEmojiButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/takePhotoButton"
        app:layout_constraintTop_toTopOf="@+id/addEmojiButton"
        app:tint="@android:color/white" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#FBC02D"
        android:src="@drawable/ic_check"
        android:tint="#F57C00"
        app:borderWidth="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="FAB"/>

</androidx.constraintlayout.widget.ConstraintLayout>