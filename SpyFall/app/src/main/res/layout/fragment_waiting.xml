<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_background_fragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textPleaseWaitEveryone"
        android:textAppearance="@style/Text.AccentedText"
        app:layout_constraintBottom_toTopOf="@+id/dottedHorizontalProgressBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="4dp"/>

    <com.example.spyfall.ui.fragment.customview.DottedHorizontalProgressBar
        android:id="@+id/dottedHorizontalProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:color="@color/blue"
        app:count="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:maxDotRadius="5px"
        app:minDotRadius="3px" />


</androidx.constraintlayout.widget.ConstraintLayout>