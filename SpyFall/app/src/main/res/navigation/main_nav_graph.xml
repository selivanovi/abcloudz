<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.spyfall.ui.fragment.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_logInFragment"
            app:destination="@id/game_nested_nav_graph"
            app:popUpTo="@id/main_nav_graph" />
    </fragment>

    <fragment
        android:id="@+id/howToPlayFragment"
        android:name="com.example.spyfall.ui.fragment.HowToPlayFragment"
        android:label="HowToPlayFragment" />
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.spyfall.ui.fragment.AboutFragment"
        android:label="AboutFragment" />
    <dialog
        android:id="@+id/quiteDialog"
        android:name="com.example.spyfall.ui.dialog.QuiteDialog"
        android:label="QuiteDialog" />
    <navigation android:id="@+id/game_nested_nav_graph"
        app:startDestination="@id/logInFragment">
        <fragment
            android:id="@+id/locationVoteFragment"
            android:name="com.example.spyfall.ui.fragment.LocationVoteFragment"
            android:label="LocationFragment"
            tools:layout="@layout/fragment_location_vote">
            <action
                android:id="@+id/action_locationVoteFragment_to_locationWonFragment"
                app:destination="@id/locationWonFragment"
                app:popUpTo="@id/startFragment" />
            <action
                android:id="@+id/action_locationVoteFragment_to_spyWonFragment"
                app:destination="@id/spyWonFragment"
                app:popUpTo="@id/startFragment" />
        </fragment>
        <fragment
            android:id="@+id/spyWonFragment"
            android:name="com.example.spyfall.ui.fragment.SpyWonFragment"
            android:label="spyWonFragment"
            tools:layout="@layout/fragment_spy_won" />
        <fragment
            android:id="@+id/prepareFragment"
            android:name="com.example.spyfall.ui.fragment.PrepareFragment"
            android:label="InvitePLayerFragment"
            tools:layout="@layout/fragment_prepare">

            <action
                android:id="@+id/action_prepareFragment_to_roleFragment"
                app:destination="@id/roleFragment"
                app:popUpTo="@id/startFragment" />
        </fragment>
        <fragment
            android:id="@+id/checkLocationFragment"
            android:name="com.example.spyfall.ui.fragment.CheckLocationFragment"
            android:label="CheckLocation"
            tools:layout="@layout/fragment_check_location">

            <action
                android:id="@+id/action_checkLocationFragment_to_locationWonFragment"
                app:destination="@id/locationWonFragment"
                app:popUpTo="@id/startFragment" />
            <action
                android:id="@+id/action_checkLocationFragment_to_spyWonFragment"
                app:destination="@id/spyWonFragment"
                app:popUpTo="@id/startFragment" />
        </fragment>
        <fragment
            android:id="@+id/waitingGameFragment"
            android:name="com.example.spyfall.ui.fragment.WaitingGameFragment"
            android:label="RoleFragment"
            tools:layout="@layout/fragment_waiting_game">

            <action
                android:id="@+id/action_waitingGameFragment_to_roleFragment"
                app:destination="@id/roleFragment"
                app:popUpTo="@id/startFragment" />
        </fragment>
        <fragment
            android:id="@+id/callLocationFragment"
            android:name="com.example.spyfall.ui.fragment.CallLocationFragment"
            android:label="CallLocationFragment"
            tools:layout="@layout/fragment_call_location">

            <action
                android:id="@+id/action_callLocationFragment_to_spyWonFragment"
                app:destination="@id/spyWonFragment"
                app:popUpTo="@id/startFragment" />
            <action
                android:id="@+id/action_callLocationFragment_to_locationWonFragment"
                app:destination="@id/locationWonFragment"
                app:popUpTo="@id/startFragment" />
        </fragment>
        <fragment
            android:id="@+id/logInFragment"
            android:name="com.example.spyfall.ui.fragment.LogInFragment"
            android:label="LogInFragment"
            tools:layout="@layout/fragment_log_in">

            <action
                android:id="@+id/action_logInFragment_to_startFragment"
                app:destination="@id/startFragment"
                app:popUpTo="@navigation/main_nav_graph" />
        </fragment>
        <fragment
            android:id="@+id/roleFragment"
            android:name="com.example.spyfall.ui.fragment.RoleFragment"
            android:label="RoleFragment"
            tools:layout="@layout/fragment_role">

            <action
                android:id="@+id/action_roleFragment_to_spyVoteFragment"
                app:destination="@id/spyVoteFragment"
                app:popUpTo="@id/startFragment" />
            <action
                android:id="@+id/action_roleFragment_to_locationVoteFragment"
                app:destination="@id/locationVoteFragment"
                app:popUpTo="@id/startFragment" />
            <action
                android:id="@+id/action_roleFragment_to_checkLocationFragment"
                app:destination="@id/checkLocationFragment"
                app:popUpTo="@id/startFragment" />
            <action
                android:id="@+id/action_roleFragment_to_callLocationFragment"
                app:destination="@id/callLocationFragment"
                app:popUpTo="@id/startFragment" />
        </fragment>
        <fragment
            android:id="@+id/startFragment"
            android:name="com.example.spyfall.ui.fragment.StartFragment"
            android:label="EnterNameFragment"
            tools:layout="@layout/fragment_start">

            <action
                android:id="@+id/action_startFragment_to_waitingGameFragment"
                app:destination="@id/waitingGameFragment"
                app:popUpTo="@id/startFragment" />
            <action
                android:id="@+id/action_startFragment_to_prepareFragment"
                app:destination="@id/prepareFragment"
                app:popUpTo="@id/startFragment" />
        </fragment>
        <fragment
            android:id="@+id/locationWonFragment"
            android:name="com.example.spyfall.ui.fragment.LocationWonFragment"
            android:label="spyWonFragment"
            tools:layout="@layout/fragment_location_won" />
        <fragment
            android:id="@+id/spyVoteFragment"
            android:name="com.example.spyfall.ui.fragment.SpyVoteFragment"
            android:label="LocationFragment"
            tools:layout="@layout/fragment_spy_vote">
            <action
                android:id="@+id/action_spyVoteFragment_to_locationWonFragment"
                app:destination="@id/locationWonFragment"
                app:popUpTo="@id/startFragment" />
            <action
                android:id="@+id/action_spyVoteFragment_to_spyWonFragment"
                app:destination="@id/spyWonFragment"
                app:popUpTo="@id/startFragment" />
        </fragment>
    </navigation>

</navigation>