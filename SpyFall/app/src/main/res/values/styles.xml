<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text.Title">
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textSize">46sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Text.OutlineTitle">
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textSize">46sp</item>
        <item name="outlineColor">@color/blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="outlineWidth">1dp</item>
    </style>

    <style name="Text.Title.Splash">
        <item name="android:textSize">44sp</item>
    </style>

    <style name="Text.OutlineTitle.Splash">
        <item name="android:textSize">44sp</item>
    </style>



    <style name="Text" parent="TextAppearance.AppCompat">

        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:lineSpacingMultiplier">2</item>
    </style>

    <style name="Text.AccentedText" parent="TextAppearance.AppCompat">

        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="FillButtonText" parent="TextAppearance.AppCompat.Button">
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="OutlineButtonText" parent="TextAppearance.AppCompat.Button">
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/color_text_outline_button</item>
    </style>


    <style name="Layout">
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">36dp</item>
        <item name="android:paddingBottom">36dp</item>
    </style>

    <style name="NavigationView.Menu" parent="Widget.Design.NavigationView">
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="itemTextColor">@drawable/menu_text_color</item>
    </style>

    <style name="OutlineButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/background_outline_button</item>
        <item name="android:layout_height">@dimen/button_height</item>
    </style>

    <style name="FillButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/background_button</item>
        <item name="android:layout_height">@dimen/button_height</item>
    </style>
</resources>