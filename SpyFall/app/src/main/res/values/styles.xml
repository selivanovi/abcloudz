<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Title">
        <item name="android:fontFamily">@font/mont_bold</item>
        <item name="android:textSize">46sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="OutlineTitle">
        <item name="android:fontFamily">@font/mont_bold</item>
        <item name="android:textSize">46sp</item>
        <item name="outlineColor">@color/blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="outlineWidth">1dp</item>
    </style>

    <style name="Title.Splash">
        <item name="android:textSize">44sp</item>
    </style>

    <style name="OutlineTitle.Splash">
        <item name="android:textSize">44sp</item>
    </style>

    <style name="Text">

        <item name="android:fontFamily">@font/mont_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:lineSpacingMultiplier">2</item>
    </style>

    <style name="ButtonText">
        <item name="android:fontFamily">@font/mont_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Layout">
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">36dp</item>
        <item name="android:paddingBottom">36dp</item>
    </style>

    <style name="Menu">
        <item name="android:fontFamily">@font/mont_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>